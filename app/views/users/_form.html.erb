

<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>


    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Nombre usuario" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placehorlder: "Introduce un nombre de usuario", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Email" %>
        </div>
        
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placehorlder: "Introduce el email" %>
        </div>
      </div>

       <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Contraseña" %>
        </div>
        
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control", placehorlder: "Introduce la contraseña" %>
        </div>
      </div>
    

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Registrar" : "Actualizar Cuenta", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    

    <% end %>

    <div class="col-xs-4 col-xs-offset-4"> 
      [ <%= link_to "Cancelar y volver al listado de artículos", articles_path %> ]
    </div>

  </div>
</div>