<% if obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(obj.errors.count, "defecto") %> ---
            No ha sido posible realizar la acci√≥n solicitada debido a que:
          </h2>
          <div class="panel-body">
            <ul>
              <% obj.errors.messages.values.each do |msg| %>
                <% msg.each do |m| %>
                  <li><%= m %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>